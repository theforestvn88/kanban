<div id="<%%= dom_id <%= @card_name %> %>">
<% @card_attributes.reject(&:password_digest?).each do |attribute| -%>
  <p>
    <strong><%= attribute.human_name %>:</strong>
<% if attribute.attachment? -%>
    <%%= link_to <%= @card_name %>.<%= attribute.column_name %>.filename, <%= @card_name %>.<%= attribute.column_name %> if <%= @card_name %>.<%= attribute.column_name %>.attached? %>
<% elsif attribute.attachments? -%>
    <%% <%= @card_name %>.<%= attribute.column_name %>.each do |<%= attribute.singular_name %>| %>
      <div><%%= link_to <%= attribute.singular_name %>.filename, <%= attribute.singular_name %> %></div>
    <%% end %>
<% else -%>
    <%%= <%= @card_name %>.<%= attribute.column_name %> %>
<% end -%>
  </p>

<% end -%>
</div>