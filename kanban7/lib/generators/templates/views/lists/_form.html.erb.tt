<%%= form_with(model: <%= @list_name %>, url: url) do |form| %>
  <%% if <%= @list_name %>.errors.any? %>
    <div style="color: red">
      <h2><%%= pluralize(<%= @list_name %>.errors.count, "error") %> prohibited this <%= @list_name %> from being saved:</h2>

      <ul>
        <%% <%= @list_name %>.errors.each do |error| %>
          <li><%%= error.full_message %></li>
        <%% end %>
      </ul>
    </div>
  <%% end %>

<% @list_attributes.each do |attribute| -%>
  <div>
    <%%= form.label :<%= attribute.column_name %>, style: "display: block" %>
    <%%= form.<%= attribute.field_type %> :<%= attribute.column_name %> %>
  </div>

<% end -%>
  <%%= form.hidden_field(:<%= @board_id %>) %>
  <div>
    <span style="color: blue;"><%%= form.submit %></span>
  </div>
<%% end %>