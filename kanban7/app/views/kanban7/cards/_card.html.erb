<div
    class="bg-slate-200 p-2" 
    draggable="true"
    droppable="true" 
    id="<%= dom_id(card) %>"
    data-currpos="<%= position(card) %>" 
    data-prevpos="<%= prev %>"
    data-viewtype="card"
    data-parentid="<%= card.send("#{@board_configs.list_model_name}_id") %>"
    data-parenttype="<%= board_configs.list_model_name %>">
  <div class="bg-white text-md p-2 rounded">
    <%= render partial: board_configs.item_card_partial, locals: { board_configs.card_model_symbol => card } %>
  </div>
</div>