<%= render "kanban7/modal" do %>
  <div class="mx-auto w-full">
        <%= render partial: @board_configs.form_card_partial, 
            locals: {
                @board_configs.list_model_symbol => @list, 
                @board_configs.card_model_symbol => @card,
                :url => Rails.application.routes.url_helpers.send("#{@board_configs.kanban_name}_kanban_update_#{@board_configs.card_model_name}_path", 
                          "#{@board_configs.card_model_name}_id".to_sym => @card.id)
            } 
        %>
  </div>
<% end %>