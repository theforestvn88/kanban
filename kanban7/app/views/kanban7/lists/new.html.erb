<%= render "kanban7/modal" do %>
  <div class="mx-auto w-full">
    <%= render partial: @board_configs.form_list_partial, 
        locals: {
            @board_configs.board_model_symbol => @board, 
            @board_configs.list_model_symbol => @board_configs.list_model.new(@board_configs.board_model_symbol => @board),
            :url => Rails.application.routes.url_helpers.send("#{@board_configs.kanban_name}_kanban_create_#{@board_configs.list_model_name}_path", 
                          @board_configs.board_model_id_symbol => @board.id)
        } 
    %>
  </div>
<% end %>