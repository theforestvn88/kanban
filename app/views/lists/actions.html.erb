<%= turbo_frame_tag "partial_content" do %>
    <div class="bg-white border border-indigo-600 shadow-lg p-2 min-w-36">    
        <div class="text-end">
            <%= link_to "move to left", move_list_path(@list, step: -1), data: {turbo_method: :post, action: "click->popup#toggle"}, class: "text-indigo-600 underline hover:bg-indigo-200" %>
        </div>
        <div class="text-end">
            <%= link_to "move to right", move_list_path(@list, step: 1), data: {turbo_method: :post, action: "click->popup#toggle"}, class: "text-indigo-600 underline hover:bg-indigo-200" %>
        </div>
        <div class="text-end">
            <%= link_to "edit", edit_list_path(@list), data: {turbo_frame: :modal, action: "click->popup#toggle"}, class: "text-indigo-600 underline hover:bg-indigo-200" %>
        </div>
        <div class="text-end">
            <%= link_to "delete", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?", action: "click->popup#toggle"}, class: "text-indigo-600 underline hover:bg-indigo-200" %>
        </div>
    </div>
<% end %>