<div id="<%= dom_id(list) %>" class="border border-indigo-600 w-96 ml-10">
    <div class="flex justify-between py-2 px-3 border-b border-indigo-600">
        <div><%= list.name %></div>
        <div data-controller="popup" class="relative">
            <button data-action="click->popup#toggle" class="text-indigo-600 hover:bg-indigo-200 px-2 py-1">...</button>
            <div data-popup-target="content" class="hidden absolute top-8 right-0">
                <%= turbo_frame_tag "partial_content", src: actions_list_path(list), loading: :lazy do %>
                    <div>
                        <span>Loading...</span>
                    </div>
                <% end %>
            </div>
        </div>
    </div>

    <div id="<%= dom_id(list) %>_cards">
        <%= render list.cards %>
    </div>

    <%= link_to "+ create new card", new_list_card_path(list_id: list.id), data: { turbo_frame: :modal }, class: "text-gray-600 border border-dashed border-indigo-300 hover:bg-gray-100 px-10 py-5 m-5 flex items-center" %>
</div>