<%= render(layout: 'shared/modal', locals: { title: '' }) do %>
    <div class="bg-white">
        <h6 class="text-indigo-600"><%= @card.title %></h6>

        <span class="flex justify-end">
            <%= link_to "edit", edit_card_path(@card), data: {turbo_frame: :modal}, class: "text-indigo-600 underline hover:bg-indigo-200" %>
            <%= link_to "delete", card_path(@card), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"}, class: "text-indigo-600 underline hover:bg-indigo-200 mx-2" %>
        </span>
    </div>
<% end %>