<div id="<%= dom_id(board) %>" class="border border-indigo-600 h-20 relative">
    <%= link_to board.name, board_path(board.id), class: "absolute top-0 left-0 w-full h-full text-indigo-600 hover:bg-indigo-200 px-10 flex items-center" %>
    <span class="flex justify-end absolute bottom-0 right-0 z-10">
        <%= link_to "edit", edit_board_path(board.id), data: {turbo_frame: :modal}, class: "text-indigo-600 underline hover:bg-indigo-200" %>
        <%= link_to "delete", board_path(board.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"}, class: "text-indigo-600 underline hover:bg-indigo-200 mx-2" %>
    </span>
</div>