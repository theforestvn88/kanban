<% flash.each do |flash_type, message| %>
    <div data-controller="flash"
        data-transition-enter="transition duration-300"
        data-transition-enter-start="transform opacity-0 translate-x-full"
        data-transition-enter-end="transform opacity-100 translate-x-[0%]"
        data-transition-leave="transition duration-300"
        data-transition-leave-start="transform opacity-100 translate-x-[0%]"
        data-transition-leave-end="transform opacity-0 translate-x-full"
        class="fixed top-0 right-0 z-50 max-w-fit h-10 flex justify-between items-center border border-indigo-600 rounded-lg shadow-2xl">
        
        <p class="ml-5 py-2 px-5 text-indigo-600"><%= message %></p>

        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
            data-action="click->flash#close">
            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
            </svg>
            <span class="sr-only">Close flash</span>
        </button>
    </div>
<% end %>